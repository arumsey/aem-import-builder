    "mocha": "^10.7.3",
    "rimraf": "^6.0.1",
    "sinon": "^18.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.5.4",
    "typescript-eslint": "~8.0.1"
  }
